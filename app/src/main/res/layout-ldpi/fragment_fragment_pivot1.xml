<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<TableLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context=".FragmentPivot">

    <TableRow
        android:id="@+id/table1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textSize="16dp"
        android:textStyle="bold">

        <TextView
            android:id="@+id/textViewSelPivot"
            android:layout_column="1"
            android:paddingTop="10dp"
            android:text="@string/Seleccione_pivot"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableSpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textStyle="bold">

        <Spinner
            android:id="@+id/spinner_pivot"
            android:layout_column="1"
            android:layout_marginEnd="8dp"
            android:background="#b77c7c7c"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textSize="12dp"
            android:visibility="visible" />

    </TableRow>

    <TableRow
        android:id="@+id/table2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:paddingTop="5dp"
            android:text="@string/Cultivo"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/piv_cultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginEnd="8dp"
            android:background="@color/background_material_light"
            android:paddingTop="0dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/table3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold">

        <TextView
            android:id="@+id/textViewCosecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:paddingTop="2dp"
            android:text="@string/Siembra"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fecha_cultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginEnd="8dp"
            android:background="@color/background_material_light"
            android:paddingTop="0dp"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/table4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textStyle="bold">

        <TextView
            android:id="@+id/textViewFenologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:paddingTop="2dp"
            android:text="@string/Fenologia"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fenologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginEnd="8dp"
            android:background="@color/background_material_light"
            android:paddingTop="0dp"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/table5"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/pressed_color_dark"
        android:textStyle="bold">

        <TextView
            android:id="@+id/textViewFecha"
            android:paddingTop="2dp"
            android:text="@string/Fecha"
            android:textAlignment="center"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEstado"
            android:layout_marginEnd="30dp"
            android:paddingTop="2dp"
            android:text="@string/Estado"
            android:textAlignment="center"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMM"
            android:paddingTop="2dp"
            android:text="@string/mm"
            android:textAlignment="textStart"
            android:textSize="13dp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/bright_foreground_disabled_material_light"
        android:gravity="center">

        <TextView
            android:id="@+id/tabla_fecha_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/tabla_estado_1"
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:layout_marginEnd="35dp"
            android:contentDescription="@string/Content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tabla_mm_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold" />


    </TableRow>

    <TableRow
