<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fm_agregar_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inriegobackground"
    tools:context="layout.Fm_agregarLluvia">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#A60A005E"
        android:text="Agregar Lluvia"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="26dp"
        android:typeface="sans"/>

    <EditText
        android:id="@+id/cantidad_lluvia"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="154dp"
        android:background="@drawable/campostexto"
        android:ems="10"
        android:gravity="center"
        android:hint="Cantidad (mm)"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:textColor="#636262"
        android:textColorHint="#636262"
        android:typeface="sans"
        android:textColorHighlight="#cececf"
        android:textCursorDrawable="@color/abc_search_url_text_pressed"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/lst_lluvia"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="265dp"
        android:layout_gravity="center_horizontal"
        android:background="#B3ffffff"
        android:focusable="false"/>

    <Button
        android:id="@+id/btn_agregar_l"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="435dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/borde_redondeado"
        android:backgroundTint="#0E417B"
        android:elevation="5dp"
        android:text="Agregar"
        android:focusable="false"
        android:textCursorDrawable="@color/abc_search_url_text_pressed"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/btn_cancelar_l"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:onClick="showSelectedItems"
        android:layout_marginTop="435dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/borde_redondeado"
        android:backgroundTint="#0E417B"
        android:elevation="5dp"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:focusable="false"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/btn_fecha_lluvia"
        android:onClick="showDatePickerDialog_Lluvia"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:background="@drawable/campostexto"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"
        android:gravity="center"
        android:textColor="#636262"
        android:focusable="false"
        android:hint="Fecha"
        android:textSize="20dp"
        android:textColorHint="#636262"
        android:textStyle="bold"
        android:typeface="sans"
        android:ems="10"/>

</FrameLayout>
